/**
 * @emmet .section.block-text-img-h>.w1680>table.section-table>tbody>tr>td.block-text>.text>h2+p^^td.block-img>.bg-text>.desc
 * @description 左右侧文字图像垂直居中对齐
 * @author tobin.xu
 * @created 2020.11.25
 */
@import '../../static'

text-img-h(parentWidth = 1680, imgSrc = null, imgWidth = 960, imgHeight = 960, textPadding = null, mImgSrc = null, mImgHeight = 500)
  &.block-text-img-h
    table.section-table
      width 100%
      margin auto
    .block-text
      position relative
      width (parentWidth - imgWidth) / parentWidth * 100%
      padding px2empc(100) 0
      vertical-align middle
      if (textPadding != null)
        .text
          box-sizing border-box
          padding textPadding
    .block-img
      position relative
      width (imgWidth / parentWidth * 100%)
      height 0
      padding-top (imgHeight / parentWidth * 100%)
      background imgSrc center / cover no-repeat
      vertical-align middle
      line-height 0
      .bg-text
        line-height 1.6
    @media (max-width mobile-width)
      &.section
        wper(x)
          (((x / 6.4%)))
        table.section-table
          &, & > tbody
            display block
          & > tbody > tr
            display flex
            flex-direction column
        .block-img, .block-text
          display block
          width auto
        .block-text
          order 1
          padding 0 0 2rem
          if (textPadding != null)
            .text
              padding 0
        .block-img
          order 2
          if (mImgHeight != null)
            padding-top wper(mImgHeight)